extends ../shared/layout

block main-content    
    .container
        .col-md-4.col-md-offset-4
            .panel.panel-default
                .panel-heading
                    h3.panel-title Please Sign Up
                .panel-body
                    form(method="post")
                        .form-group
                            label(for="username") Username
                            .input-group
                                span.input-group-addon
                                input(id="username" class="form-control" type="text" name="username" placeholder="Username" autofocus)
                        .form-group
                            label(for="password") Password
                            .input-group
                                span.input-group-addon
                                input(id="password" class="form-control" type="password" name="password" placeholder="Password")
                        .form-group
                            label(for="confirm-password") Confirm Password
                            .input-group
                                span.input-group-addon
                                input(id="confirm-password" class="form-control" type="password" name="confirmPassword" placeholder="Confirm Password")
                        .row
                            .col-md-12
                                input(type="submit" class="btn btn-primary btn-block btn-md" value="Register")
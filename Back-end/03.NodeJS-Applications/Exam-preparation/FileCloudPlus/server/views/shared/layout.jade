doctype
html
    head
        title FileCloud
        link(rel="stylesheet" href="/lib/bootstrap-3.2.0/css/bootstrap.min.css")
        link(rel="stylesheet" href="/css/site.css")
    body
        header.nav.navbar-inverse.navbar-fixed-top
        .container
            .navbar-header
                a.navbar-brand(href="/") FileCloud
            .navbar-collapse.collapse
                ul.nav.navbar-nav
                    li
                        a(href="/public") Public Uploads

                ul.nav.navbar-nav.navbar-right
                    if (currentUser)
                        li
                            a(href="/myfiles") My Files
                        li
                            a(href="/upload") +New Upload
                        li
                            a(href="/myfiles") Hi, #{currentUser.username}
                        li
                            a(href="/logout") Logout
                    else                            
                        li
                            a(href="/register") Register
                        li
                            a(href="/login") Login

        .container
            if (errorMessage)
                .alert.alert-danger #{errorMessage}

            block main-content

        footer
            p.text-center
                | &copy; Telerik Academy 2014

        include scripts